{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noLib": false,
    "removeComments": true,
    "sourceMap": false,
    "strict": true,
    "target": "es5",
    "types": [
      "lodash",
      "node",
      "promise",
      "react-dom",
      "react",
      "reflect-metadata"
    ],
    "importHelpers": true
  },
  "include": ["./src/**/*"]
}
